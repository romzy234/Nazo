<!doctype html>
<html lang="en">


<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Na-zo  </title>
    <link rel="stylesheet" href="/assets/css/style.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Finapp HTML Mobile Template">
    <meta name="keywords" content="bootstrap, mobile template, cordova, phonegap, mobile, html, responsive" />
    <link rel="icon" type="image/png" href="/assets/img/favicon.png" sizes="32x32">
    <link rel="shortcut icon" href="/assets/img/favicon.png">
    <link rel=stylesheet href="https://s3-us-west-2.amazonaws.com/colors-css/2.2.0/colors.min.css">
</head>

<body class="bg-light"> 

    <!-- loader -->
    <div id="loader">
        <img src="/assets/img/logo-icon.png" alt="icon" class="loading-icon">
    </div>
    <!-- * loader -->

    <!-- App Header -->

    <!-- * App Header -->

    <% include ./include/appHeader%>
    <!-- App Capsule -->
    <div id="appCapsule">
        <div class="section mt-4">
            <div class="left">
                <span class="title ">welcome back,</span>
                <h2 class="total "><%= user.firstName.toUpperCase()%> <%= user.lastName.toUpperCase()%></h2>
            </div>
        </div>
        <!-- Wallet Card -->
        <div class="section wallet-card-section  mt-4">


            <div class="wallet-card bg-navy " >
                <!-- Balance -->
                <div class="balance">
                    <div class="left">
                        <span class="title ">Total Balance</span>
                        <h1 class="total white">₦ <%= user.amount.toLocaleString()%></h1>
                    </div>
                    <div class="right">
                        <a href="#" class="button" data-toggle="modal" data-target="#depositActionSheet">
                            <ion-icon class= 'round' name="add-outline"></ion-icon>
                        </a>
                    </div>
                </div>
                <!-- * Balance -->

                <!-- * Wallet Footer -->
            </div>
        </div>
        <!-- Wallet Card -->

        <!-- Deposit Action Sheet -->
        <div class="modal fade action-sheet" id="depositActionSheet" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Account Info</h5>

                    </div>
                    <div class="modal-body">
                        <div class="action-sheet-content">
                            <form>
                                <div class="form-group basic">
                                    <div class="input-wrapper">
                                        <label class="label" for="account1">Account</label>
                                        <h1 class="total "><%= user.account_number%></h1>

                                    </div>
                                </div>
                                <div class="form-group basic">
                                    <div class="input-wrapper">
                                        <label class="label" for="account1">Bank</label>
                                        <h2 class="total "><%= user.bank_name%></h2>

                                    </div>
                                </div>

                                

                                <div class="form-group basic">
                                    <button type="button" class="btn btn-primary btn-block btn-lg"
                                        data-dismiss="modal">Share</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- * Deposit Action Sheet -->

        <!-- Send Action Sheet -->
        <div class="modal fade action-sheet" id="sendActionSheet" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Send Money</h5>
                    </div>
                    <div class="modal-body">
                        <div class="action-sheet-content">
                            <form>
                                <div class="form-group basic">
                                    <div class="input-wrapper">
                                        <label class="label" for="account2">From</label>
                                        <select class="form-control custom-select" id="account2">
                                            <option value="0">Savings (*** 5019)</option>
                                            <option value="1">Investment (*** 6212)</option>
                                            <option value="2">Mortgage (*** 5021)</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="form-group basic">
                                    <div class="input-wrapper">
                                        <label class="label" for="text11">To</label>
                                        <input type="email" class="form-control" id="text11" placeholder="Enter bank ID">
                                        <i class="clear-input"><ion-icon name="close-circle"></ion-icon></i>
                                    </div>
                                </div>

                                <div class="form-group basic">
                                    <label class="label">Enter Amount</label>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="input14">₦</span>
                                        </div>
                                        <input type="text" class="form-control form-control-lg" placeholder="0">
                                    </div>
                                </div>

                                <div class="form-group basic">
                                    <button type="button" class="btn btn-primary btn-block btn-lg"
                                        data-dismiss="modal">Deposit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- * Send Action Sheet -->

        <!-- Stats -->
        <div class="section ">
            <div class="row mt-2">
                <div class="col-6">
                    <div class="stat-box">
                        <div class="title">Saving</div>
                        <div class="value text-info">₦ <%= user.saving%></div>
                    </div>
                </div>
                <div class="col-6">
                    <div class="stat-box">
                        <div class="title">Expenses</div>
                        <div class="value text-danger">₦ <%= user.expenses.toLocaleString()%></div>
                    </div>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-6">
                    <div class="stat-box">
                        <div class="title">Total loans</div>
                        <div class="value">₦ <%= user.loan.toLocaleString()%></div>
                    </div>
                </div>
                <div class="col-6">
                    <div class="stat-box">
                        <div class="title">Income</div>
                        <div class="value text-success">₦ <%= user.income.toLocaleString()%></div>
                    </div>
                </div>
            </div>
        </div>
        <!-- * Stats -->

        <!-- Transactions -->
        <div class="section mt-4">
            <div class="section-heading">
                <h2 class="title">Transactions</h2><small>Last Five Transactions</small>
                <a href="/transactions" class="link">View All</a>
            </div>
            <div class="transactions">
                <% if(transaction.length == 0){%>
                <h3 style="opacity: 0.5;text-align: center;">No Transaction</h3>
                <%}else{%>
                <%transaction.forEach((value)=>{%>
                <!-- item -->
                <a href="/transactions" class="item">
                    <div class="detail">
                        <% if(value.type == 'debit'){%>
                            <ion-icon class='text-danger mx-2 my-auto' size='large' name="arrow-forward-outline"></ion-icon>
                            <%}else{%>
                                <ion-icon class='text-success mx-2 my-auto' size='large' name="arrow-down-outline"></ion-icon>
                                <%}%>
                        <div>
                            <strong><%=value.type.toUpperCase()%></strong>
                            <p><%= dayjs(value.createdAt).format('YYYY-MMMM-DD HH:mm')%></p>
                        </div>
                    </div>
                    <div class="right">
                        <% if(value.type == 'debit'){%>
                        <div class="price text-danger"> - ₦<%=value.amount%></div>
                        <%}else{%>
                        <div class="price text-success"> + ₦<%=value.amount%></div>
                        <%}%>
                    </div>
                </a>
                <!-- * item -->
                <%});%>
                <%}%>
            </div>
        </div>
        <!-- * Transactions -->

        <!-- my cards -->
        <div class="section full mt-4">
            <div class="section-heading padding">
                <h2 class="title">My Investment</h2>
                <a href="/investments.html" class="link">View All</a>
            </div>
            <div class="container">
                <div class="item">
                    <!-- card block -->
                    <div class="card-block bg-primary">
                        <div class="card-main">
                            <div class="card-button dropdown">
                                <button type="button" class="btn btn-link btn-icon" data-toggle="dropdown">
                                    <ion-icon name="ellipsis-horizontal"></ion-icon>
                                </button>
                                <div class="dropdown-menu dropdown-menu-right">
                                    <a class="dropdown-item" href="/comingsoon.html">
                                        <ion-icon name="arrow-up-circle-outline"></ion-icon>Upgrade
                                    </a>
                                </div>
                            </div>
                            <div class="balance">
                                <span class="label">Profit</span>
                                <h1 class="title">5%</h1>
                            </div>
                            <div class="in">
                                <div class="card-number">
                                    <span class="label">Company Name</span>
                                    Binary Hub - Risk Level (Low)
                                </div>
                                <div class="bottom">
                                    <div class="card-expiry">
                                        <span class="label">end date</span>
                                        10 Dec
                                    </div>
                                    <div class="card-ccv">
                                        <span class="label">Cost</span>
                                        54 unit @ ₦10000
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- * card block -->
                </div>
            </div>
        </div>
        <!-- * my cards -->

        <!-- Send Money -->

        <!-- * Send Money -->

        <!-- loans -->
        <div class="section full mt-4">
            <div class="section-heading padding">
                <h2 class="title">Loan Requests</h2>

                <a href="/loans" class="link">View All</a>
            </div>
            <% if(loan.length == 1 ){%>
            <div class="container">
              
                <%loan.forEach((value)=>{%>
                <!-- item -->
                <div class="item">
                    <div class="bill-box">
                        <div class="img-wrapper">
                            <div class="iconbox bg-danger">
                                <ion-icon name="medkit-outline"></ion-icon>
                            </div>
                        </div>
                        <div class="price">₦ <%= value.amount%></div>
                        <p><%= value.name%></p>
                        <% if(value.approve){%>
                            <button class="btn btn-success btn-block btn-sm">Approve</button>
                            <%}else{%>
                            <button class="btn btn-warning btn-block btn-sm">Pending</button>
                        <%}%>
                    </div>
                </div>
                <!-- * item -->
                <%});%>
            </div>
            <%}else if(loan.length !== 0){%>
                <div class="carousel-multiple owl-carousel owl-theme shadowfix">
              
                    <%loan.forEach((value)=>{%>
                    <!-- item -->
                    <div class="item">
                        <div class="bill-box">
                            <div class="img-wrapper">
                                <div class="iconbox bg-danger">
                                    <ion-icon name="medkit-outline"></ion-icon>
                                </div>
                            </div>
                            <div class="price">₦ <%= value.amount%></div>
                            <p><%= value.name%></p>
                            <% if(value.approve){%>
                                <button class="btn btn-success btn-block btn-sm">Approve</button>
                                <%}else{%>
                                <button class="btn btn-warning btn-block btn-sm">Pending</button>
                            <%}%>
                        </div>
                    </div>
                    <!-- * item -->
                    <%});%>
                </div>
            <%}else{%>
                <div class="section mt-4">
                    <div class="transactions">
                <a href="/loans" class="item">
                    <div>
                        <div>
                            <strong>Apply For A Loan </strong>
                            <p>Start Growthing Your Profit With Loan Tailored for you</p>
                        </div>
                    </div>
                    <div class="right">
                        <ion-icon class='text-success mx-2 my-auto' size='large' name="arrow-forward-outline"></ion-icon>
                    </div>
                </a>
                    </div>
                </div>
                <%}%>
        </div>
        <!-- * Monthly loans.html -->


        <!-- Saving Goals -->
        <div class="section mt-4">
            <div class="section-heading">
                <h2 class="title">Backing Requests</h2>
                <a href="/backing" class="link">View All</a>
            </div>
            <div class="goals">
                <!-- item -->
                <div class="item">
                    <div class="in">
                        <div>
                            <h4>Chicken House (43 Unit)</h4>
                            <p>₦ 12,000 per Unit</p>
                        </div>
                        <div class="price">₦498,000</div>
                    </div>
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" style="width: 85%;" aria-valuenow="85"
                            aria-valuemin="0" aria-valuemax="100">85%</div>
                    </div>
                </div>
                <!-- * item -->
            </div>
        </div>
        <!-- * Saving Goals -->


        <!-- fin advice -->
        <div class="section full mt-4 mb-3">
            <div class="section-heading padding">
                <h2 class="title">Financial Advice</h2>
                <!-- <a href="advice.html" class="link">View All</a> -->
            </div>
            <div class="shadowfix carousel-multiple owl-carousel owl-theme">

                <h1 style="opacity: 0.4;text-align: center;">No Activitiy to generate An Advice</h1>

            </div>
        </div>
        <!-- * News -->


        <!-- app footer -->
        <div class="appFooter mb-4 bg-light">
            <div class="footer-title">
                <!-- Copyright © Finapp 2020. All Rights Reserved. -->
            </div>
            <!-- Bootstrap 4 based mobile template. -->
        </div>
        <!-- * app footer -->

    <!-- * App Capsule -->


    <!-- App Bottom Menu -->
    <div class="appBottomMenu bg-light">
        <a href="/home" class="item active">
            <div class="col">
                <ion-icon name="pie-chart-outline"></ion-icon>
                <strong>Overview</strong>
            </div>
        </a>
        <a href="/banking" class="item">
            <div class="col">
                <ion-icon name="wallet-outline"></ion-icon>
                <strong>Banking</strong>
            </div>
        </a>
        <a href="/backing" class="item">
            <div class="col">
                <ion-icon name="rocket-outline"></ion-icon>
                <strong>Backing</strong>
            </div>
        </a>

        <a href="/settings" class="item">
            <div class="col">
                <ion-icon name="settings-outline"></ion-icon>
                <strong>Others</strong>
            </div>
        </a>
    </div>
    <!-- * App Bottom Menu -->

  

    <!-- ///////////// Js Files ////////////////////  -->
    <!-- Jquery -->
    <script src="/assets/js/lib/jquery-3.4.1.min.js"></script>
    <!-- Bootstrap-->
    <script src="/assets/js/lib/popper.min.js"></script>
    <script src="/assets/js/lib/bootstrap.min.js"></script>
    <!-- Ionicons -->
    <script src="/assets/js/plugins/owl-carousel/owl.carousel.min.js"></script>
    <!-- Base Js File -->
    <script src="/assets/js/base.js"></script>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

</body>


</html>