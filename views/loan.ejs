<!doctype html>
<html lang="en">


<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>My Loan</title>
    <link rel="stylesheet" href="/assets/css/style.css">
    <link rel="stylesheet" href="/assets/css/ionicons.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Finapp HTML Mobile Template">
    <meta name="keywords" content="bootstrap, mobile template, cordova, phonegap, mobile, html, responsive" />
    <link rel="apple-touch-icon" sizes="180x180" href="/assets/img/apple-touch-icon.png">
    <link rel="icon" type="image/png" href="/assets/img/favicon.png" sizes="32x32">
    <link rel="shortcut icon" href="/assets/img/favicon.png">
</head>

<body class="bg-white">

    <!-- loader -->
    <div id="loader">
        <img src="/assets/img/logo-icon.png" alt="icon" class="loading-icon">
    </div>
    <!-- * loader -->

    <!-- App Header -->
    <div class="appHeader no-border mt-1">
        <div class="left">
            <a href="javascript:;" class="headerButton goBack">
                <ion-icon name="chevron-back-outline"></ion-icon>
            </a>
        </div>
        <div class="pageTitle">
            Request For A New Loan
        </div>
        <form action="/loan" method="post">

        <div class="right">
            <button type="submit" class=" btn btn-primary  " style="border-radius: 6px ;box-shadow: rgba(17, 17, 26, 0.05) 0px 4px 16px, rgba(17, 17, 26, 0.05) 0px 8px 32px;">Done</button>

        </div>
    </div>
    <!-- * App Header -->

    <!-- App Capsule -->
    <div id="appCapsule">

        <div class="section">
            <div class="splash-page mt-4     mb-5 pt-5">
                <!-- <img src="https://pngtree.com/freepng/bribe-vector-icon_3750791.html" alt="loan image"> -->
                <img class="imaged w120" src="https://cdn-icons-png.flaticon.com/512/2660/2660516.png"/>
                <p class="pt-5 mb-0">
                   Request for Loan
                </p>
                    <div class="form-group">
                        <div class="input-wrapper">
                            <input type="text" class="form-control" placeholder="Name" name="name" >
                            <i class="clear-input"><ion-icon name="close-circle"></ion-icon></i>
                        </div>
                        <br>
                        <div class="input-wrapper">
                            <input type="text" class="form-control" placeholder="Amount" name="amount" >
                            <i class="clear-input"><ion-icon name="close-circle"></ion-icon></i>
                        </div>
                        <br>
                        <div class="input-wrapper">
                            <input type="date" class="form-control" placeholder="Date To Be Paid" name="date" >
                            <i class="clear-input"><ion-icon name="close-circle"></ion-icon></i>
                        </div>
                        <br>
                        <div class="input-wrapper">
                           <textarea name="reason" class="form-control" id="" cols="30" rows="10">Reason</textarea>
                            <i class="clear-input"><ion-icon name="close-circle"></ion-icon></i>
                        </div>
                    </div>
    
                </form>
            </div>
        </div>


    </div>
    <!-- * App Capsule -->


    <!-- ///////////// Js Files ////////////////////  -->
    <!-- Jquery -->
    <script src="/assets/js/lib/jquery-3.4.1.min.js"></script>
    <!-- Bootstrap-->
    <script src="/assets/js/lib/popper.min.js"></script>
    <script src="/assets/js/lib/bootstrap.min.js"></script>
    <!-- Ionicons -->
    <script src="/assets/js/icons/ionicons.js"></script>    <!-- Owl Carousel -->
    <script src="/assets/js/plugins/owl-carousel/owl.carousel.min.js"></script>
    <!-- Base Js File -->
    <script src="/assets/js/base.js"></script>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

</body>

</html>