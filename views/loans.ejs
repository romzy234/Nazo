<!doctype html>
<html lang="en">


<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>NAZO</title>
    <link rel="stylesheet" href="/assets/css/style.css">
    <link rel="stylesheet" href="/assets/css/ionicons.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Finapp HTML Mobile Template">
    <meta name="keywords" content="bootstrap, mobile template, cordova, phonegap, mobile, html, responsive" />
    <link rel="apple-touch-icon" sizes="180x180" href="/assets/img/apple-touch-icon.png">
    <link rel="icon" type="image/png" href="/assets/img/favicon.png" sizes="32x32">
    <link rel="shortcut icon" href="/assets/img/favicon.png">
    <link rel=stylesheet href="https://s3-us-west-2.amazonaws.com/colors-css/2.2.0/colors.min.css">
</head>

<body class="bg-white"> 

    <!-- loader -->
    <div id="loader">
        <img src="/assets/img/logo-icon.png" alt="icon" class="loading-icon">
    </div>
    <!-- * loader -->

    <!-- App Header -->
    <div class="appHeader" style="border: none">
        <div class="left">
            <a href="#" class="headerButton goBack">
                <ion-icon name="chevron-back-outline"></ion-icon>
            </a>
        </div>
        <div class="pageTitle">
            Loan Requests
        </div>
        <div class="right">
            <a href="/loan" class="headerButton">
                <ion-icon name="add-outline"></ion-icon>
            </a>
        </div>
    </div>
    <!-- * App Header -->

    <!-- Extra Header -->
    <div class="extraHeader pr-0 pl-0">
        <ul class="nav nav-tabs lined" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#waiting" role="tab">
                    Pending
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#paid" role="tab">
                    Aproved
                </a>
            </li>
        </ul>
    </div>
    <!-- * Extra Header -->


    <!-- App Capsule -->
    <div id="appCapsule" class="extra-header-active">

        <div class="section tab-content mt-2 mb-1">

            <!-- waiting tab -->
            <div class="tab-pane fade show active" id="waiting" role="tabpanel">
                <div class="row">
                    <% if(loan.length !== 0 && !loan.approve){%>
                        <%loan.forEach((value)=>{%>
                    <% if(!loan.approve){%>
                        <div class="col-6 mb-2">
                        <div class="bill-box">
                            <div class="img-wrapper">
                                <ion-icon class='text-warning mx-2 my-auto' size='large' name="cash-outline"></ion-icon>
                            </div>
                            <div class="price"> ₦<%=value.amount%></div>
                            <p> <%=value.reason%></p>
                            <a href="#" class="btn btn-primary btn-block btn-sm">Pending</a>
                        </div>
                    </div>
                    <%}%>
                    <%});%>
                    <%}else{%>
                        <h2 style="text-align: center; opacity: 0.5;"></h2>
                        <%}%>

                </div>
            </div>
            <!-- * waiting tab -->



            <!-- paid tab -->
            <div class="tab-pane fade" id="paid" role="tabpanel">
                <div class="row">
                    <div class="row">
                        <% if(loan.length !== 0 && !loan.approve){%>
                            <%loan.forEach((value)=>{%>
                        <% if(loan.approve){%>
                            <div class="col-6 mb-2">
                            <div class="bill-box">
                                <div class="img-wrapper">
                                    <ion-icon class='text-warning mx-2 my-auto' size='large' name="cash-outline"></ion-icon>
                                </div>
                                <div class="price"> ₦<%=value.amount%></div>
                                <p> <%=value.reason%></p>
                                <a href="#" class="btn btn-primary btn-block btn-sm">Pending</a>
                            </div>
                        </div>
                        <%}%>
                        <%});%>
                        <%}else{%>
                            <h2 style="text-align: center; opacity: 0.5;"></h2>
                            <%}%>
                    </div>
                </div>
            </div>
            <!-- * paid tab -->

        </div>

    </div>
    <!-- * App Capsule -->



    
  

    <!-- ///////////// Js Files ////////////////////  -->
    <!-- Jquery -->
    <script src="/assets/js/lib/jquery-3.4.1.min.js"></script>
    <!-- Bootstrap-->
    <script src="/assets/js/lib/popper.min.js"></script>
    <script src="/assets/js/lib/bootstrap.min.js"></script>
    <!-- Ionicons -->
    <script src="/assets/js/icons/ionicons.js"></script>    <!-- Owl Carousel -->
    <script src="/assets/js/plugins/owl-carousel/owl.carousel.min.js"></script>
    <!-- Base Js File -->
    <script src="/assets/js/base.js"></script>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

</body>


</html>